<p id="notice"><%= notice %></p>

<h1>Listing Workrows</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Task</th>
      <th>Hours worked</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workrows.each do |workrow| %>
      <tr>
        <td><%= workrow.date %></td>
        <td><%= workrow.task %></td>
        <td><%= workrow.hours_worked %></td>
        <td><%= workrow.notes %></td>
        <td><%= link_to 'Show', workrow %></td>
        <td><%= link_to 'Edit', edit_workrow_path(workrow) %></td>
        <td><%= link_to 'Destroy', workrow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


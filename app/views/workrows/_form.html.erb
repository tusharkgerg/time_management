<%= simple_form_for(@workrow) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date, label: 'Date', as: :date %>
    <%= f.input :task, label: 'Task' %>
    <%= f.input :hours_worked, label: 'Hours worked' %>
    <%= f.input :notes, label: 'Notes' %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>